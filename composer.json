{
    "name": "eawardie/data-grid",
    "description": "Data table package used to build advanced tables with a matching front-end package. Allows for searching, filtering, paging & some other advanced features. ",
    "keywords": [
        "eawardie",
        "laravel",
        "data-grid"
    ],
    "homepage": "https://github.com/eawardie/data-grid",
    "license": "MIT",
    "authors": [
        {
            "name": "eawardie",
            "email": "56725833+EA-Wardie@users.noreply.github.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "spatie/laravel-package-tools": "^1.13.0",
        "illuminate/contracts": "^9.0",
        "ext-json": "*"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Eawardie\\DataGrid\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eawardie\\DataGrid\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eawardie\\DataGrid\\DataGridServiceProvider"
            ],
            "aliases": {
                "DataGrid": "Eawardie\\DataGrid\\Facades\\DataGrid"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
